<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title><%= h(yield(:title) || "Untitled") %></title>
    <%= stylesheet_link_tag 'application' %>
    <%= yield(:head) %>
  </head>
  <body>
    <div>
     <div style="position:relative;top:5px;left:5px;">
    <div id="logo"><%= image_tag("tabright.gif") %></div>
  </div>
    <div style="position:absolute;top:5px;right:5px;">
    <% if logged_in? %>
      Welcome <%=h current_user.email %>      
       <%= link_to "Log out", logout_path %> |
    <% else %>      
        <a href="/">Home</a> |
        <a href="/tour">Tour</a> |
        <a href="/goodies">Goodies</a> 
        <% if controller.controller_name!="home" and controller.action_name !="new"%> |
        <%= link_to "Sign up", signup_path %> |
        <%= link_to "Log in", login_path %> 
     <%end%>
    <% end %>
    </div>
    </div>
    <br>
    <div id="container">
      <%- flash.each do |name, msg| -%>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <%- end -%>
      
      <%- if show_title? -%>
        <h1><%=h yield(:title) %></h1>
      <%- end -%>
      
      <%= yield %>
    </div>
    
    <div id="footer">Copyright &copy; 2010 Idiles Systems. All rights reserved.</div>
  </body>
</html>
