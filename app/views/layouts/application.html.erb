<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <%= javascript_include_tag :defaults%>
    <title><%= h(yield(:title) || "Untitled") %></title>
    <%= stylesheet_link_tag 'application' %>
    <%= yield(:head) %>
  </head>
  <div style="position:absolute;top:20px;left:300px;">
    <%if current_user %>
      <%= link_to "DashBoard",:controller=>"dashboard",:action=>"index"%> |
      <%= link_to "..." %>
    <% else %>
      <a href="/">Home</a>
      | <a href="/tour">Tour</a>
      | <%= link_to "Sign up", signup_path %>
    <%end%>
  </div>
  <body>
    <div style="position:relative;top:5px;left:40px;">
      <%=image_tag("rails.png")%>
    </div >


    <div style="position:absolute;top:20px;right:50px;">
      <% if logged_in? %>
        Welcome, <%=h current_user.email %>
        <%= link_to "Settings" %> |
        <%= link_to "Log out", logout_path %>
      <% end %>
    </div>

    <div id="container">
      <%- flash.each do |name, msg| -%>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <%- end -%>

      <%- if show_title? -%>
        <h1><%=h yield(:title) %></h1>
      <%- end -%>

      <%= yield %>
    </div>

    <div id="Footer">
      Copyright &copy; 2010 Idiles Systems. All rights reserved.
    </div>
  </body>
</html>
