<ul id="metrics">
<% for metric in @metrics %>
  <% content_tag_for :li, metric do %>
    <span class="handle"><%=link_to_remote(image_tag('delete.png') ,:url=>{:controller=>"metrics",:action =>"destroy",:id=>metric},:update => "metrics_list",:method=>:delete)%>
                         <%= link_to_remote(image_tag("edit.png"),:url=>{:controller=>"metrics",:action =>"edit",:id=>metric},:update => "ajax_metric_form",:method=>:put) %>
    <%= metric.title %></span>
  <% end %>
<% end %>
</ul>
<%= sortable_element("metrics", :url => sort_metrics_path, :handle => "handle") %>
