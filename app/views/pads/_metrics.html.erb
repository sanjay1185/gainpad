
<ul id="metrics">
<% for metric in @metrics %>
  <% content_tag_for :li, metric do %>
    <span class="handle"><%=link_to_remote(image_tag('delete.png'),url_for(:controller=>"metrics",:action =>"destroy",:id=>metric),:method=>:delete,:update => "metrics_list")%>
                         <%= link_to_remote(image_tag("edit.png"),url_for(:controller=>"metrics",:action =>"edit",:id=>metric),:method=>:put,:update => "metrics_list") %>
    <%= metric.title %></span>
  <% end %>
<% end %>
</ul>
<%= sortable_element("metrics", :url => sort_metrics_path, :handle => "handle") %>
